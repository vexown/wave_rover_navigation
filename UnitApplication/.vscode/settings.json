{
    // These settings tweaks to the cmake plugin will ensure
    // that you debug using cortex-debug instead of trying to launch
    // a Pico binary on the host
    "cmake.statusbar.advanced": {
        "debug": {
            "visibility": "hidden"
        },
        "launch": {
            "visibility": "hidden"
        },
        "build": {
            "visibility": "hidden"
        },
        "buildTarget": {
            "visibility": "hidden"
        }
    },
    "cmake.buildBeforeRun": true,
    "C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools",
    "files.associations": {
        "string.h": "c",
        "stdio.h": "c",
        "freertos.h": "c",
        "task.h": "c",
        "semphr.h": "c",
        "wifi_common.h": "c",
        "wifi_transmit.h": "c",
        "wifi_tcp.h": "c",
        "common.h": "c",
        "flash_layout.h": "c",
        "flash_operations.h": "c",
        "metadata.h": "c"
    }
}